doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Photobooth example
    style.
      body {
        background-color: #404040;
      }
      video, canvas {
        border: 1px solid gray;
        width: 480px;
        height: 320px;
      }
      #capture {
        border-radius: 50px;
      }
      #capture:hover {
        background-color: black;
        color: white;
      }
      .grayscale {
        -webkit-filter: grayscale(1);
        -moz-filter: grayscale(1);
        -ms-filter: grayscale(1);
        -o-filter: grayscale(1);
        filter: grayscale(1);
      }
      .sepia {
        -webkit-filter: sepia(1);
        -moz-filter: sepia(1);
        -ms-filter: sepia(1);
        -o-filter: sepia(1);
        filter: sepia(1);
      }
      .invert {
        -webkit-filter: invert(1);
        -moz-filter: invert(1);
        -ms-filter: invert(1);
        -o-filter: invert(1);
        filter: invert(1);
      }
      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }
  body
    .center
      video(autoplay='')
      canvas
      button#capture.btn Capture

include ./partials/footer

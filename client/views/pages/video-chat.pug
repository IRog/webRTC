doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Video-chat example
    style.
      body {
        background-color: #3D6DF2;
        margin-top: 15px;
        font-family: sans-serif;
        color: white;
      }
      video {
        background: black;
        border: 1px solid gray;
      }
      .page {
        position: relative;
        display: block;
        margin: 0 auto;
        width: 500px;
        height: 500px;
      }
      #yours {
        width: 150px;
        height: 150px;
        position: absolute;
        top: 15px;
        right: 15px;
      }
      #theirs {
        width: 500px;
        height: 500px;
      }
      #received {
        display: block;
        width: 480px;
        height: 100px;
        background: white;
        padding: 10px;
        margin-top: 10px;
        color: black;
        overflow: scroll;
      }
      #call-page {
        display: none;
      }
  body
    #login-page.page
      h2 Login As
      input#username(type='text')
      button#login Login
    #call-page.page
      video#yours(autoplay='')
      video#theirs(autoplay='')
      input#their-username(type='text')
      button#call Call
      button#hang-up Hang Up
      input#message(type='text')
      button#send Send
      #received

include ./partials/footer
